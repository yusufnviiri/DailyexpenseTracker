<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="attendance.Views.ProductDetails"
             xmlns:viewmodel="clr-namespace:attendance.ViewModel"
             xmlns:model="clr-namespace:attendance.Models"
             x:DataType="viewmodel:ProductDetailsViewModel"
             Title="{Binding Title}">
   
    <VerticalStackLayout>
        <Label 
            Text="{Binding Product.ProductId}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
       Text="{Binding Product.ProductName}"
       VerticalOptions="Center" 
       HorizontalOptions="Center" />
        <Label 
       Text="{Binding Product.Cost}"
       VerticalOptions="Center" 
       HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>